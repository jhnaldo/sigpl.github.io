<?php

foreach($list as $key => $value) {
  $values = explode(";", $value);
  echo "<tr><th align=\"left\">$key</th>\n";
  echo '  <td align="left">';
  $link = $values[2];
  if($link != "") {
    if(!file_exists($link)) {
      if(file_exists($link.".html")) { $link = "$link.html"; }
      else { $link = ""; }
    }
  }
  if($link != "") {
    echo "<a href=\"$link\">$values[1]</a>";
  }
  else {
    echo $values[1];
  }
  echo "</td>\n  <td>$values[0]</td>\n";
  echo "  <td>$values[3]</td>\n";
  echo "</tr>\n";
}
echo "</table>";

?>
